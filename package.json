{
  "private": true,
  "name": "elbrus",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "fix": "run-p --aggregate-output --continue-on-error lint:*:fix",
    "lint": "run-p --aggregate-output --continue-on-error 'lint:**:!(fix)'",
    "lint:eslint": "eslint --ignore-path .gitignore --ignore-path .eslintignore .",
    "lint:eslint:fix": "npm run lint:eslint -- --fix",
    "lint:json": "prettier -c --parser json **/*.json",
    "lint:json:fix": "prettier -w --parser json **/*.json",
    "lint:package.json": "prettier-package-json -l",
    "lint:package.json:fix": "prettier-package-json --write",
    "lint:prettier": "prettier -c .",
    "lint:prettier:fix": "prettier -w .",
    "lint:rust:check": "cd src-tauri && cargo check",
    "lint:rust:clippy": "cd src-tauri && cargo clippy",
    "lint:rust:fmt": "cd src-tauri && cargo fmt -- --check",
    "lint:rust:fmt:fix": "cd src-tauri && cargo fmt",
    "lint:tsc": "tsc -b",
    "prepare": "husky install",
    "preview": "vite preview",
    "tauri": "tauri",
    "watch": "run-p --continue-on-error watch:*:*",
    "watch:js": "run-p --continue-on-error watch:js:*",
    "watch:js:eslint": "esw -w --ignore-path .gitignore --ignore-path .eslintignore --ext .tsx,.jsx,.ts,.js .",
    "watch:js:tsc": "tsc -b -w",
    "watch:rust": "run-p --continue-on-error watch:rust:check:* watch:rust:clippy:*",
    "watch:rust:check": "cd src-tauri && cargo watch -x check",
    "watch:rust:clippy": "cd src-tauri && cargo watch -x clippy"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.2.0",
    "clsx": "^1.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "@tauri-apps/cli": "^1.2.2",
    "@types/node": "^18.7.10",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "@vitejs/plugin-react": "^3.0.0",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.31.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unicorn": "^45.0.2",
    "eslint-watch": "^8.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "prettier": "^2.8.2",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^4.0.4",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.6.4",
    "vite": "^4.0.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --ignore-path .gitignore --ignore-path .eslintignore"
    ],
    "package.json": [
      "prettier-package-json -l"
    ],
    "*.{json,rc}": [
      "prettier -c --parser json"
    ]
  }
}
